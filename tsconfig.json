{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"], // Changed from "./app/*" to cover root directory
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@types/*": ["./types/*"], // Add this line
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
